{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "mocha"
    ],
    "baseUrl": "./src",
    "paths": {
      "@parser/*": [
        "directory_parser/*",
        "markdown_parser/*"
      ],
      "@home/*": [
        "./index.d.ts"
      ]
    }
  },
  "include": [
    "./src",
    "./test",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}