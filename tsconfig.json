{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "mocha"
    ],
    "baseUrl": "./src",
    "paths": {
      "@platform/*": [
        "platform/*"
      ],
      "@engine/*": [
        "engine/*"
      ],
      "@home": [
        "index.ts"
      ]
    }
  },
  "include": [
    "./src",
    "./test",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}