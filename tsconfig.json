{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "mocha"
    ],
    "baseUrl": "src",
    "paths": {
      "@platform/*": [
        "platform/*"
      ]
    }
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}